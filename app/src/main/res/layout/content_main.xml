<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:weightSum="1"
    >

<LinearLayout
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.1"
    android:background="@color/bru_back"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/hd_back"
            android:layout_gravity="left"
            android:onClick="go_intro"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/hd_logo"
            android:padding="5dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@drawable/hd_menu"
            android:onClick="open_drawer"
            />
    </FrameLayout>
</LinearLayout>



<LinearLayout
    android:id="@+id/test1_layout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.9"
    android:weightSum="1"
    android:padding="20dp"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:weightSum="4"
        >

        <ImageView
            android:id="@+id/bru_activity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/main_icon01"
            android:onClick="go_1"
            android:padding="10dp"
            />
        <ImageView
            android:id="@+id/bru_shoping"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/main_icon03"
            android:onClick="go_1"
            android:padding="10dp"
            />
        <ImageView
            android:id="@+id/bru_place"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/main_icon05"
            android:onClick="go_1"
            android:padding="10dp"
            />
        <ImageView
            android:id="@+id/bru_study"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/main_icon08"
            android:onClick="go_1"
            android:padding="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:weightSum="4"
        >

        <ImageView
            android:id="@+id/bru_foods"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/main_icon02"
            android:onClick="go_1"
            android:padding="10dp"
            />
        <ImageView
            android:id="@+id/bru_hotel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/main_icon04"
            android:onClick="go_1"
            android:padding="10dp"
            />
        <ImageView
            android:id="@+id/bru_trafic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/main_icon07"
            android:onClick="go_1"
            android:padding="10dp"
            />
        <ImageView
            android:id="@+id/bru_extra"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/main_icon06"
            android:onClick="go_1"
            android:padding="10dp"
            />
    </LinearLayout>
</LinearLayout>
</LinearLayout>


